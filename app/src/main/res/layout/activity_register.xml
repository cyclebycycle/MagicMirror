<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <include layout="@layout/layout_main_toolbar"/>
    <ImageView
        android:id="@+id/re_head"
        android:layout_height="150dp"
        android:layout_width="150dp"
        android:background="@drawable/login_picture_bg"
        android:contentDescription="@string/app_name"
        android:src="@drawable/bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"/>

    <RelativeLayout
        android:id="@+id/re_user"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/re_head">
        <LinearLayout
            android:id="@+id/re_user_info"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/lbs_popup_bg"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_mirrorid"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@drawable/login_et_bg"
                android:hint="@string/mirrorid_hint"
                android:inputType="text"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textColorHint="#707070" />

            <View
                android:layout_height="0.5dp"
                android:layout_width="match_parent"
                android:background="@color/devline"/>
            <EditText
                android:id="@+id/et_re_username"
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:inputType="text"
                android:textColorHint = "#707070"
                android:textColor="@color/black"
                android:hint="@string/username_hint"
                android:background="@drawable/login_et_bg"
                android:layout_margin="2dp"/>
            <View
                android:layout_height="0.5dp"
                android:layout_width="match_parent"
                android:background="@color/devline"/>
            <EditText
                android:id="@+id/et_re_password"
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:inputType="textPassword"
                android:hint="@string/password_hint"
                android:textColorHint = "#707070"
                android:textColor="@color/black"
                android:background="@drawable/login_et_bg"
                android:layout_margin="2dp"/>
            <View
                android:layout_height="0.5dp"
                android:layout_width="match_parent"
                android:background="@color/devline"/>
        </LinearLayout>

        <Button
            android:id="@+id/bt_upload"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textSize="18sp"
            android:text="@string/register"
            android:layout_below="@id/re_user_info"
            android:background="@drawable/login_btn"
            android:textColor="@android:color/white"
            />




    </RelativeLayout>
</RelativeLayout>
