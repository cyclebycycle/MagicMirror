<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/lo_head"
        android:layout_height="150dp"
        android:layout_width="150dp"
        android:background="@drawable/login_picture_bg"
        android:contentDescription="@string/app_name"
        android:src="@drawable/bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"/>

    <RelativeLayout
        android:id="@+id/lo_user"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/lo_head">
        <LinearLayout
            android:id="@+id/lo_user_info"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/lbs_popup_bg"
            android:orientation="vertical">
            <EditText
                android:id="@+id/et_username"
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:inputType="text"
                android:hint="@string/username_hint"
                android:textColorHint = "#707070"
                android:textColor="@color/black"
                android:background="@drawable/login_et_bg"
                android:layout_margin="2dp"/>
            <View
                android:layout_height="0.5dp"
                android:layout_width="match_parent"
                android:background="@color/devline"/>
            <EditText
                android:id="@+id/et_password"
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:inputType="textPassword"
                android:hint="@string/password_hint"
                android:textColorHint = "#707070"
                android:textColor="@color/black"
                android:background="@drawable/login_et_bg"
                android:layout_margin="2dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_below="@id/lo_user_info">
            <Button
                android:id="@+id/bt_login"
                android:layout_height="50dp"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textSize="18sp"
                android:layout_weight="1"
                android:text="@string/login"
                android:background="@drawable/login_btn"
                android:textColor="@android:color/white"
                />
            <Button
                android:id="@+id/bt_register"
                android:layout_height="50dp"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:text="@string/register"
                android:textSize="18sp"
                android:layout_weight="1"
                android:background="@drawable/login_btn"
                android:textColor="@android:color/white"
                />

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>
